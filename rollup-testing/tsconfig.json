{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2020",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "resolveJsonModule": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ]
}